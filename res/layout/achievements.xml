<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_gameLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="36.0"
            android:layout_weight="1.0">

            <LinearLayout
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15.0">

                <LinearLayout
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5.0">

                    <FrameLayout
                        android:background="@drawable/score"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.0">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="14.0">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4.0" />

                            <LinearLayout
                                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:weightSum="6.0"
                                android:layout_weight="4.0">

                                <ru.avroraventures.russiansinglanguage.tools.AutoResizeTextView
                                    android:textSize="200sp"
                                    android:textColor="@color/white_color"
                                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                    android:id="@+id/scoreTextView"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="Очки: 1250"
                                    android:maxLines="2"
                                    android:lines="2"
                                    android:minLines="2"
                                    android:layout_weight="2.0" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="6.0" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <ru.avroraventures.russiansinglanguage.tools.AutoResizeTextView
                android:textSize="100sp"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/myAchievements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_achievements"
                android:layout_weight="2.0" />

            <LinearLayout
                android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_gameLayout"
                android:weightSum="3.0"
                android:layout_weight="12.0">

                <LinearLayout
                    android:id="@+id/best_in_group"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <ImageView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/best_in_group" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/best_in_game"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                    <ImageView
                        android:gravity="android:scaleType="fitXY" />

                        <LinearLayout
                            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10.0">

                    <ru.avroraventures.russiansinglanguage.tools.AutoResizeTextView
                        android:textSize="50sp"
                        android:textColor="@color/white_color"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/toClose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="@string/close"
                        android:maxLines="1"
                        android:lines="1"
                        android:minLines="1"
                        android:layout_weight="7.0" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/yes"
                android:paddingLeft="3dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/yes"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10.0">

                    <ru.avroraventures.russiansinglanguage.tools.AutoResizeTextView
                        android:textSize="50sp"
                        android:textColor="@color/white_color"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/toGameAgain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:text="@string/play_again"
                        android:maxLines="1"
                        android:lines="1"
                        android:minLines="1"
                        android:layout_weight="7.0" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="#ffeb6320"
        android:layout_width="match_parent"
        android:layout_height="UNKNOWN_DATA_0x501" />
</LinearLayout>
    </LinearLayout>
    </LinearLayout>

